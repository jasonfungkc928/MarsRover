<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icboss" />

    <Button
        android:id="@+id/profile"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginTop="132dp"
        android:layout_marginBottom="49dp"
        android:onClick="startProfile"
        android:text="Profile"
        app:layout_constraintBottom_toTopOf="@+id/lesson"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView1" />

    <Button
        android:id="@+id/lesson"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginBottom="54dp"
        android:onClick="startLesson"
        android:text="Lesson"
        app:layout_constraintBottom_toTopOf="@+id/game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/game"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginBottom="45dp"
        android:onClick="startGame"
        android:text="Game"
        app:layout_constraintBottom_toTopOf="@+id/QandA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/QandA"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginBottom="54dp"
        android:onClick="startQandA"
        android:text="Q and A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>